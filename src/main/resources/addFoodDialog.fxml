<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.collections.FXCollections?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AddFoodDialogController">
  <children>
    <Label text="Add New Food Item" />
    <TextField fx:id="nameField" promptText="Name" />
    <TextField fx:id="caloriesField" promptText="Calories" />
    <TextField fx:id="proteinField" promptText="Protein (g)" />
    <TextField fx:id="fatField" promptText="Fat (g)" />
    <TextField fx:id="carbsField" promptText="Carbohydrates (g)" />
    <ComboBox fx:id="categoryBox">
      <items>
        <FXCollections fx:factory="observableArrayList">
          <String>Fruits</String>
          <String>Vegetables</String>
          <String>Meat</String>
          <String>Dairy</String>
          <String>Grains</String>
        </FXCollections>
      </items>
    </ComboBox>
    <Label fx:id="errorLabel" textFill="red" />
    <HBox alignment="CENTER" spacing="10">
      <children>
        <Button text="Add" onAction="#handleAdd" />
        <Button text="Cancel" onAction="#handleCancel" />
      </children>
    </HBox>
  </children>
</VBox>
